[{
    "component": "div",
    "class": "px-2 py-3",
    "children": [{
            "component": "h5",
            "class": "text-havelock-blue font-semibold uppercase mb-3 text-sm",
            "children": "Personal Details"
        },
        {
            "component": "div",
            "class": "md:grid md:grid-cols-3 gap-3",
            "children": [{
                    "type": "text",
                    "label": "First Name",
                    "name": "first_name",
                    "placeholder": "e.g John",
                    "help": "Specify first name",
                    "validation": "required"
                },
                {
                    "type": "text",
                    "label": "Middle Name",
                    "name": "middle_name",
                    "placeholder": "e.g Joseph",
                    "help": "Specify middle name"
                },
                {
                    "type": "text",
                    "label": "Last Name",
                    "name": "last_name",
                    "placeholder": "e.g Doe",
                    "help": "Specify last name",
                    "validation": "required"
                }
            ]
        },
        {
            "component": "div",
            "class": "md:grid md:grid-cols-3 gap-3",
            "children": [{
                    "type": "date",
                    "label": "Date of birth",
                    "name": "date_of_birth",
                    "placeholder": "--select date--",
                    "help": "Specify date of birth",
                    "validation": "required"
                },
                {
                    "type": "select",
                    "label": "Gender",
                    "name": "gender",
                    "options": {
                        "F": "Female",
                        "M": "Male",
                        "O": "Prefer not to say"
                    },
                    "placeholder": "--select gender--",
                    "help": "Specify gender",
                    "validation": "required"
                },
                {
                    "type": "select",
                    "label": "Occupation",
                    "name": "occupation_id",
                    "placeholder": "--select--",
                    "options": [0],
                    "help": "Specify occupation",
                    "validation": "required"
                }
            ]
        },
        {
            "component": "div",
            "class": "md:grid md:grid-cols-3 gap-3",
            "children": [{
                    "component": "div",
                    "class": "md:grid md:grid-cols-2 gap-3",
                    "children": [{
                            "type": "select",
                            "label": "ID Type",
                            "name": "id_type",
                            "placeholder": "--select ID type--",
                            "options": {
                                "national_id": "National ID",
                                "birth_cert": "Birth Certificate",
                                "alien_id": "Alien ID",
                                "military_id": "Military ID",
                                "passport": "Passport No."
                            },
                            "help": "Specify ID type",
                            "validation": "required"
                        },
                        {
                            "type": "text",
                            "label": "ID Number",
                            "name": "id_number",
                            "placeholder": "e.g. 123456",
                            "help": "Specify ID number",
                            "validation": "required"
                        }
                    ]
                },
                {
                    "type": "text",
                    "label": "Phone Number",
                    "name": "phone",
                    "placeholder": "e.g. 07123...",
                    "help": "Specify phone number",
                    "validation": "required"
                },
                {
                    "type": "text",
                    "label": "Email",
                    "name": "email",
                    "placeholder": "e.g john.doe@gmail.com",
                    "help": "Specify email address",
                    "validation": "required"
                }
            ]
        },
        {
            "component": "h3",
            "class": "text-havelock-blue font-semibold uppercase mb-3 text-sm",
            "children": "Next of Kin Details"
        },

        {
            "component": "div",
            "class": "md:grid md:grid-cols-2 gap-3",
            "children": [{
                    "label": "Name",
                    "type": "text",
                    "name": "next_of_kin_name",
                    "validation": "required"
                },
                {
                    "label": "Phone Number",
                    "type": "tel",
                    "name": "next_of_kin_phone",
                    "validation": "required"
                }
            ]
        },
        {
            "component": "h3",
            "class": "text-havelock-blue font-semibold uppercase mb-3 text-sm",
            "children": "Other"
        },
        {
            "component": "div",
            "class": "md:grid md:grid-cols-2 gap-3",
            "children": [{
                    "type": "select",
                    "label": "Region of Residence",
                    "name": "region_of_residence_id",
                    "options": [1],
                    "validation": "required"
                },
                {
                    "type": "select",
                    "label": "Competencies",
                    "name": "competencies",
                    "options": [2],
                    "multiple": "multiple",
                    "validation": "required"
                }
            ]
        },

        {
            "type": "textarea",
            "label": "Note",
            "rows": 5,
            "name": "note"
        }


    ]
}]